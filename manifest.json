{
    "name": "Appearance",
    "description": "Go To Light mode and then dark mode and vice versa",
    "version": "1.0.0",
    "manifest_version": 2,
    "background": {
      "scripts": ["popup.js"],
      "persistent": false  
    },
    "browser_action": {
      "default_title": "appearance",
      "default_popup": "popup.html"
    },
    "permissions": [
      "tabs",
      "activeTab"
    ]
  }
  
  
  